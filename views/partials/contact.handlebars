{{!-- Adrian --}}
<div class="card shadow-wrap">
  <div class="card-header">
    Message Center
  </div>
  <div class="card-body contact-card">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Company</th>
          <th scope="col">Subject</th>
          <th scope="col">Message</th>
        </tr>
      </thead>
      <tbody>
        {{#each Contact}}
        <tr>
          <td scope="row">{{dataValues.company}}</td>
          <td>{{dataValues.msgSubject}}</td>
          <td>
            <button type="button" class="btn btn-primary" data-toggle="modal"
              data-target="#contactModal{{dataValues.id}}">
              View
            </button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{#each Contact}}
<div class="modal fade" id="contactModal{{dataValues.id}}" tabindex="-1" role="dialog"
  aria-labelledby="contactModalLabel{{dataValues.id}}" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="contactModalLabel{{dataValues.id}}">Message from {{dataValues.company}}:</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>{{dataValues.message}}</p>
        <a href={{dataValues.jobPosting}} class="btn btn-primary" target="_blank" rel="noopener noreferrer">
          Job Posting
        </a>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{{/each}}